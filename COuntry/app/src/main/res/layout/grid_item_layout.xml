<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTop">

    <ImageView
        android:id="@+id/imageView_flag"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Country: "
        android:id="@+id/textView_countryName"
        android:layout_alignTop="@+id/imageView_flag"
        android:layout_toRightOf="@+id/imageView_flag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#0e5955"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Subregion: "
        android:id="@+id/textView_subregion"
        android:layout_below="@+id/textView_countryName"
        android:layout_alignLeft="@+id/textView_countryName"
        android:layout_alignStart="@+id/textView_countryName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Population: "
        android:id="@+id/textView_population"
        android:layout_below="@+id/textView_subregion"
        android:layout_alignLeft="@+id/textView_subregion"
        android:layout_alignStart="@+id/textView_subregion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Capital: "
        android:id="@+id/textView_capital"
        android:layout_below="@+id/textView_population"
        android:layout_alignLeft="@+id/textView_population"
        android:layout_alignStart="@+id/textView_population"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Area: "
        android:id="@+id/textView_area"
        android:layout_below="@+id/textView_capital"
        android:layout_alignLeft="@+id/textView_capital"
        android:layout_alignStart="@+id/textView_capital"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>